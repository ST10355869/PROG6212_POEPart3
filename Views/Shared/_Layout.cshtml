<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ST10355869_PROG6212_Part2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10355869_PROG6212_Part2.styles.css" asp-append-version="true" />
    <style>
        /* Header Styling */
        header {
            color: whitesmoke;
            font-size: 18px;
        }

        .navbar {
            background-color: #007bff !important; /* Header color */
        }

        .navbar-brand, .nav-link {
            color: whitesmoke !important;
        }

        /* Page Background Styling */
        body {
            background-color: #f8f9fa; /* Off-white background */
        }

        /* Footer Styling */
        footer {
            background-color: #151515;
        }

        .footer a {
            color: whitesmoke;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <a class="navbar-brand" href="/">MyApp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Claims/List">Claims List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Claims/Submit">Submit Claim</a>
                            </li>
                        }
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin">Admin Page</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Claims/List">Claims List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Claims/Submit">Submit Claim</a>
                            </li>
                        }
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - My ASP.NET Application - <a href="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
